@model List<LibroDisponibilidad>

<link rel="stylesheet" href="~/css/EstiloLibros.css">
<link href="https://fonts.googleapis.com/css2?family=Poppins:wght@700&display=swap" rel="stylesheet">

<div class="temp">
    <p class="titulo">Libros</p>
    <div>
        <form method="post">
            <div class="search">
                <input name="input" type="text" placeholder="Buscar" />
                <select name="option" id="filtro">
                    <option value="T">Título</option>
                    <option value="A">Autor</option>
                </select>
                <button id="send-search">Buscar</button>
            </div>
        </form>
    </div>
    <div style="margin:auto; width:90%;position:relative;">
        @if (Model.Count() == 0)
        {
            <div class="contenido-texto">
                <div class="texto" style="margin: auto" class="text-center">
                    <h4>No se han encontrado libros</h4>
                </div>
            </div>
        }
        else
        {
            @foreach (LibroDisponibilidad l in Model)
            {
                <div class="card-libro-color card-libro">
                    <div class="imagen-libro">
                        @if (@l.IMAGEN == null)
                        {
                            <img src="~/imgs/ImgNull.jpg" alt="">
                        }
                        else
                        {
                            <img src="~/imgs/libros/@l.IMAGEN" alt="">
                        }
                    </div>
                    <div class="contenido-libro">
                        <div class="titulo-autor">
                            <p class="titulo-libro">@l.NOMBRE_LIBRO</p>
                            <p class="autor-libro">Autor: @l.NOMBRE_AUTOR</p>
                        </div>
                        <div class="separator-card"></div>
                        <div class="paginas-valoracion">
                            <p class="n-paginas">Paginas: @l.NUM_PAGINAS</p>
                            <div class="valoracion">
