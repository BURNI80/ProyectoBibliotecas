                    <p><a class="a-menu" asp-action="Index" asp-controller="Bibliotecas" >Bibliotecas</a></p>
                </div>
                <div class="boton-menu">
                    <p>Libros</p>
                </div>
                <div class="boton-menu">
                    <p>Autores</p>
                </div>
                <div class="boton-menu">
                    <p>Editoriales</p>
                </div>
            </div>
            <!-- *PARTE INFERIOR DEL MENU -->
            <div class="menu-inferior">
                <div class="separador-menu"></div>
                <p class="menu-usuario">USUARIO</p>
