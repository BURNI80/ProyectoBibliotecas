                    <p>Cerrar Session</p>
                </div>
            </div>
        </div>
    </nav>
    <!-- *AQUI VA EL CONTENIDO -->
    <div class="main scrollbar" id="style-1">
           @RenderBody()
    </div>


</body>

</html>


<script src="https://code.jquery.com/jquery-3.6.3.min.js"></script>
<script>
    $(document).ready(main);
    var contador = 1;

    function main() {
        $(window).on('resize', function () {
            if ($(this).width() > 800) {
                $(".menu").css('left', '0');
            }
            if ($(this).width() < 800) {
                $(".menu").css('left', '-100%');
            }
        }).trigger('resize');

        $(".menu-movil").click(function () {
            if (contador == 1) {
                contador = 0;
                $(".menu").animate({
                    left: '0'
                })
            } else {
                contador = 1;
                $(".menu").animate({
                    left: '-100%'
                })
            }
        });
    };

</script>